<div class="offcanvas offcanvas-end" tabindex="-1" id="Contactform" aria-labelledby="ContactformLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="ContactformLabel">Contact</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form id="contactForm">
            <div class="mb-3">
                <label for="name" class="form-label">Nom</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="subject" class="form-label">Objet</label>
                <input type="text" class="form-control" id="subject" name="subject" required>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const btnContact = document.querySelector('.contact-button');
        const formContact = document.getElementById('Contactform');
        const offcanvasInstance = new bootstrap.Offcanvas(formContact);

        btnContact.addEventListener('click', function() {
            offcanvasInstance.toggle();
        });
    });
</script>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $('.navbar-toggler').on('click', function() {
            $(this).toggleClass('active');
            $('.navbar-collapse').slideToggle('slow');
            $('.animated-icon1').toggleClass('open');
        });

        $('.navbar-nav .nav-link').on('click', function() {
            $('.navbar-nav .nav-link').removeClass('activenav');
            $(this).addClass('activenav');
        });

        $(window).scroll(function() {
            if ($(this).scrollTop() > 100) {
                $('.navbar-general').addClass('navbar-container-scrolled');
            } else {
                $('.navbar-general').removeClass('navbar-container-scrolled');
            }
        });

    });
</script>
