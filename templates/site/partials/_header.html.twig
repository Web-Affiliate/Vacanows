                    <img src="{{ asset('uploads/images/' ~ content.getLogo()) }}" alt="logo" width="80" height="80" class="img-navbar">
                {% endif %}
            </a>
            <button class="navbar-toggler first-button navbar-toggler-icon" type="button" data-toggle="collapse" data-target="#navbarSupportedContent20"
                aria-controls="navbarSupportedContent20" aria-expanded="false" aria-label="Toggle navigation">
                <div class="animated-icon1"><span></span><span></span><span></span></div>
            </button>
            <div class="collapse navbar-collapse navbar-container" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    {% for i in 1..4 %}
                        <li class="nav-item">
